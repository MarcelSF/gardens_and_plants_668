<div class="banner" style="background-image: url('<%= @garden.banner_url%>');">
  <div class="container">
    <h1><%= @garden.name %></h1>
  </div>
</div>

<div class="plants">
  <div class="plant_grid">
  <% @garden.plants.each do |plant| %>
    <div class="card-category" style="background-image: url('<%= plant.image_url%>')">
      <%= plant.name %>
       <%= link_to "+", plant_path(plant), method: :delete, data: { confirm: "Are you sure?" }, class: "card-remove-link" %>
    </div>
  <% end %>
  </div>
</div>

<div class="container">
  <%= simple_form_for([@garden, @plant]) do |f| %>
    <%= f.input :name %>
    <%= f.input :image_url %>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>

</div>

<%= link_to 'Edit', edit_garden_path(@garden) %> |
<%= link_to 'Back', gardens_path %>
